<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#3CF1EBF1"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#3CF1EBF1">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                >

                <TextView
                    android:id="@+id/txtDayName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Day Name"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@android:color/black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                            >

                    <ImageView
                        android:id="@+id/imgAbbr"
                        android:layout_width="44dp"
                        android:layout_height="44dp">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtWeatherStateName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weather St"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"

                        ></TextView>

                </LinearLayout>
                <TextView
                    android:id="@+id/txtMinTemp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Min Temp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtMaxTemp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Max Temp"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/appDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aplication Date"
                    android:textColor="@android:color/black"/>



            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>